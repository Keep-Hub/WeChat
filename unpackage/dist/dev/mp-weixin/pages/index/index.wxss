.swipe-btn {
  color: #FFFFFF;
  text-align: center;
  line-height: 140rpx;
  padding: 0 30rpx;
}
.user-avatar {
  width: 100%;
  background-color: #FFFFFF;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
}
.user-avatar .pd-20 {
  padding: 20rpx 0;
}
.user-avatar .left {
  height: 100rpx;
  width: 100rpx;
  margin: 0 20rpx;
  position: relative;
}
.user-avatar .left image {
  width: 100rpx;
  height: 100%;
  -webkit-border-radius: 10rpx;
          border-radius: 10rpx;
}
.user-avatar .left .msg-hot {
  position: absolute;
  top: 10rpx;
  height: 30rpx;
  line-height: 30rpx;
  right: -10rpx;
  padding: 2rpx 10rpx;
  font-size: 24rpx;
  color: #FFFFFF;
  background-color: red;
  -webkit-border-radius: 16rpx;
          border-radius: 16rpx;
}
.user-avatar .center {
  -webkit-box-flex: 1;
          flex: 1;
  min-width: 0;
  height: 100rpx;
  border-bottom: 1rpx solid #f4f4f4;
  -webkit-flex: 1;
}
.user-avatar .center .nike-name {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 32rpx;
  margin: 8rpx 0;
}
.user-avatar .center .new-msg {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 26rpx;
  color: #7f7f7f;
}
.user-avatar .right {
  width: 110rpx;
  height: 100rpx;
  font-size: 24rpx;
  padding-right: 20rpx !important;
  color: #7f7f7f;
  text-align: right;
  border-bottom: 1rpx solid #f4f4f4;
}

